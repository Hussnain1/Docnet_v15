<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/docnet?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">Asad1234</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="model/News.hbm.xml"/>
    <mapping resource="model/Blogs.hbm.xml"/>
    <mapping resource="model/Doctors.hbm.xml"/>
    <mapping resource="model/Timings.hbm.xml"/>
    <mapping resource="model/MedicalReports.hbm.xml"/>
    <mapping resource="model/Appointments.hbm.xml"/>
    <mapping resource="model/Logintable.hbm.xml"/>
    <mapping resource="model/Patients.hbm.xml"/>
    <mapping resource="model/Events.hbm.xml"/>
    <mapping resource="model/Images.hbm.xml"/>
   </session-factory>
</hibernate-configuration>
